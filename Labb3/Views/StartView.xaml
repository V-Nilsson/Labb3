<UserControl
    x:Class="Labb3.Views.StartView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Labb3.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">


    <StackPanel Background="DimGray">
        <TextBlock
            Margin="20"
            HorizontalAlignment="Center"
            FontSize="20"
            Text="Welcome to the Quiz!" />
        <TextBlock
            Margin="20"
            HorizontalAlignment="Center"
            FontSize="20"
            Text="Choose your quiz" />

        <ComboBox
            x:Name="StartViewComboBox"
            Width="250"
            ItemsSource="{Binding AllQuizzes}"
            SelectedItem="{Binding SelectedQuiz}"
            SourceUpdated="OnContentChanged">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Title}" />
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <TextBlock Text="Press Start, then switch to the Play tab" Margin="0,20,0,0"></TextBlock>
        <Button
            Height="35"
            Margin="20"
            Command="{Binding SetActiveQuizCommand}"
            Content="Start" />
    </StackPanel>

</UserControl>
